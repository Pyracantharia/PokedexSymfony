{% extends 'base.html.twig' %}

{% block title %}Velo index{% endblock %}

{% block body %}
    <h1>Velo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for velo in velos %}
            <tr>
                <td>{{ velo.id }}</td>
                <td>{{ velo.name }}</td>
                <td>
                    <a href="{{ path('app_velo_show', {'id': velo.id}) }}">show</a>
                    <a href="{{ path('app_velo_edit', {'id': velo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_velo_new') }}">Create new</a>
{% endblock %}
